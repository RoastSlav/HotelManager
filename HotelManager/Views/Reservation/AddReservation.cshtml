@{
    ViewData["Title"] = "Add a reservation";
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>AddReservation</title>
    <link href="SiteStile.css" rel="stylesheet" type="text/css">
    <link href="css/bootstrap-4.3.1.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div class="text-center">
        <h1 class="display-4">Нова резервация</h1>
    </div>
    <form>
        <div class="form-group">
            <label for="usr">Стая №:</label>
            <input type="number">
        </div>
        <div class="form-group">
            <label for="usr">Служител направил резервация:</label>
            <input type="text" class="form-control col-6" id="usr">
        </div>
        <div class="form-group">
            <label for="usr">Клиент:</label>
            <div class="dropdown">
                <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
                    Избери
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                </ul>
            </div>
        </div>
        <div class="form-group">
            <label for="usr">Дата на настаняване:</label>
            <input type="date" class="form-control col-6" id="usr5">
        </div>
        <div class="form-group">
            <label for="usr">Дата на напускане:</label>
            <input type="date" class="form-control col-6" id="usr6">
        </div>
        <div class="form-group">
            <label for="email">All inclusive:</label>
            <div><label><input type="checkbox" value="">Да</label></div>
        </div>
        <div class="form-group">
            <label for="email">Закуска:</label>
            <div><label><input type="checkbox" value="">Да</label></div>
        </div>
        <div class="form-group">
            <label for="usr">Дължима сума:</label>
            <input type="text" class="form-control col-6" id="usr8">
        </div>
        <button type="button" class="btn btn-primary">Добави</button>
    </form>
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap-4.3.1.js"></script>
</body>
</html>