@model HotelManager.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Edit a user";
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>EditUser</title>
    <link href="SiteStile.css" rel="stylesheet" type="text/css">
    <link href="css/bootstrap-4.3.1.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div class="text-center">
        <h1 class="display-4">Промяна на потребител</h1>
    </div>
    <form>
        <div class="form-group">
            <label asp-for="input.Username">Потребителско име:</label>
            <input type="text" asp-for="input.Username" class="form-control col-6">
        </div>
        <div class="form-group">
            <label asp-for="input.NewPassword">	Нова Парола:</label>
            <input asp-for="input.NewPassword" type="password" class="form-control col-6">
        </div>
        <div class="form-group">
            <label asp-for="input.ConfirmPassword">	Потвърди парола:</label>
            <input asp-for="input.ConfirmPassword" type="password" class="form-control col-6">
        </div>
        <div class="form-group">
            <label asp-for="input.FirstName">Собствено име:</label>
            <input asp-for="input.FirstName" type="text" class="form-control col-6">
        </div>
        <div class="form-group">
            <label asp-for="input.SecondName">Бащино име:</label>
            <input asp-for="input.SecondName" type="text" class="form-control col-6">
        </div>
        <div class="form-group">
            <label asp-for="input.LastName">Фамилия:</label>
            <input asp-for="input.LastName" type="text" class="form-control col-6">
        </div>
        <div class="form-group">
            <label asp-for="input.PhoneNumber"></label>
            <input asp-for="input.PhoneNumber" class="form-control" />
            <span asp-validation-for="input.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="input.EGN">ЕГН:</label>
            <input asp-for="input.EGN" type="number" class="form-control col-6">
        </div>
        <div class="form-group">
            <label asp-for="input.NewEmail">Имейл:</label>
            <input asp-for="input.NewEmail" type="text" class="form-control col-6">
        </div>
        <div class="form-group">
            <label asp-for="input.DateOfEmployment">Дата назначаване:</label>
            <input asp-for="input.DateOfEmployment" type="date" class="form-control col-6">
        </div>
        <div class="form-group">
            <label asp-for="input.IsActive">Активен акаунт: </label>
            <div class="dropdown">
                <input asp-for="input.IsActive" class="form-check" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="input.DateOfTermination">Дата освобождаване(незадължителна):</label>
            <input asp-for="input.DateOfTermination" type="date" class="form-control col-6">
        </div>
        <button type="button" class="btn btn-primary">Запази</button>
    </form>
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap-4.3.1.js"></script>
</body>
</html>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}