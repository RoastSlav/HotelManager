@model HotelManager.ViewModels.EditRoleViewModel

<html>
    <head>
        <meta charset="utf-8">
        <title>Редактиране на роля</title>
        <link href="SiteStile.css" rel="stylesheet" type="text/css">
        <link href="css/bootstrap-4.3.1.css" rel="stylesheet" type="text/css">
    </head>
    <body>
            <div class="text-center card-header">
                <h1 class="display-4">Редактиране на роля</h1>
            </div>
            <form method="post" asp-action="EditRole" class="card-body">
                <div class="form-group">
                    <label asp-for="Id">ИД:</label>
                    <input asp-for="Id" type="text" disabled class="form-control col-8 ">
                </div>
                <div class="form-group">
                    <label asp-for="RoleName">Име на ролята:</label>
                    <input asp-for="RoleName" type="text" class="form-control col-8">
                </div>
                <div class="card-footer">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <button class="btn btn-primary my-2 my-sm-0" type="submit">Запазване</button>
                    <a asp-action="ListRoles" class="btn btn-primary ml-4">Назад</a>
                </div>
            </form>
    </body>
</html>
@section Scripts {
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap-4.3.1.js"></script>
}