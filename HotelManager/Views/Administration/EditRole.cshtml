@model HotelManager.ViewModels.EditRoleViewModel

<html>
<head>
    <meta charset="utf-8">
    <title>Редактиране на роля</title>
    <link href="SiteStile.css" rel="stylesheet" type="text/css">
    <link href="css/bootstrap-4.3.1.css" rel="stylesheet" type="text/css">
</head>

<body>
    <div class="text-center">
        <h1 class="display-4">Редактиране на роля</h1>
    </div>
    <form>
        <div class="form-group">
            <label for="usr">ИД:</label>
            <input type="text" class="form-control col-8" id="id">
        </div>
        <div class="form-group">
            <label for="usr">Име на ролята:</label>
            <input type="text" class="form-control col-8" id="id1">
        </div>
        <div>
            <p>
                <button class="btn btn-primary my-2 my-sm-0" type="submit">Запазване</button>
                <button class="btn btn-primary my-2 my-sm-0" type="submit">Затваряне</button>
            </p>
        </div>
    </form>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
                </div>
            </div>          
        </form>
    </body>
</html>
@section Scripts {
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap-4.3.1.js"></script>
}