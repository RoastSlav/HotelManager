@model Client
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>EditClient</title>
    <link href="SiteStile.css" rel="stylesheet" type="text/css">
    <link href="css/bootstrap-4.3.1.css" rel="stylesheet" type="text/css">

</head>

<body>
    <div class="text-center">
        <h1 class="display-4">Редактиране на клиент</h1>
    </div>
    <div class="container">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <table class="table table-striped">
                <tbody>
                    <tr>
                        <th scope="row"></th>
                        <th>Собствено име</th>
                        <td><input asp-for="FirstName" type="text" class="form-control col-12"></td>
                        <td>Фамилия</td>
                        <td><input asp-for="LastName" type="text" class="form-control col-12"></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row"></th>
                        <td>Телефон</td>
                        <td><input asp-for="PhoneNumber" type="text" class="form-control col-12"></td>
                        <td>Имейл</td>
                        <td><input asp-for="Email" type="text" class="form-control col-12"></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <th scope="row"></th>
                        <td>Възрастен</td>
                        <td><div><label><input asp-for="Adult" type="checkbox">Над 18 год.</label></div></td>
                        <td>Ид</td>
                        <td><input asp-for="clientId" type="text" disabled class="form-control col-12"></td>
                        <td></td>
                        <td>
                        </td>
                    </tr>
                </tbody>
            </table>
            <button class="btn btn-primary my-2 my-sm-0" asp-route-clientId="@Model.clientId" type="submit">Запазване</button>
        </form>
        <form method="post" asp-action="DeleteClient" asp-route-id="@Model.clientId">
            <span id="confirmDeleteSpan_@Model.clientId" style="display:none">
                <span>Сигурни ли стe?</span>
                <button type="submit" class="btn btn-danger">Да</button>
                <a href="#" class="btn btn-primary"
                   onclick="confirmDelete('@Model.clientId', false)">Не</a>
            </span>
            <span id="deleteSpan_@Model.clientId">
                <a href="#" class="btn btn-danger"
                   onclick="confirmDelete('@Model.clientId', true)">Изтрии</a>
            </span>
        </form>
    </div>
</body>
</html>
@section Scripts {
    <script src="~/js/confirmDelete.js"></script>
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap-4.3.1.js"></script>
}